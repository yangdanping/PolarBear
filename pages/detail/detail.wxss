@import '../../style/animation.wxss';
.detailContainer{
  height: 2900rpx;
  background-image: var(--DetailNavBarbg);
}

.container{
  display:flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: nowrap;
  color: #fff;
}


.msg{
  font-size: 66rpx;
  font-weight: bold;
  text-align: center;
  margin: 10rpx 0;
  color: rgba(255, 255, 255, .9);
  /* transition: all .3s; */
  animation: moveDown 1s forwards;
}

.detailImg{
  width: 700rpx;
  height: 975rpx;
  box-shadow: 25rpx 20rpx 25rpx rgba(0, 0, 0, .5);
  border-radius: 15rpx;
  animation: fadein 1s forwards,move .5s forwards;
}

.detailImg image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.detailTitle{
  margin-top: 40rpx;
  font-size: 66rpx;
  font-weight: 100;
  animation: fadein 1s forwards,move 1s forwards;
}

.detailStar{
  margin-top: 40rpx;
  width: 700rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  background-color: rgba(255, 255, 255,.3);
  text-align: center;
  border-radius: 15rpx;
  animation: fadein 1s forwards,move 1.5s forwards;
}
.detailStar view:first-child{
  flex: 1;
  border-right: 1px solid #000;
}
.detailStar view:last-child{
  flex: 2;
  border: 0;
}

.stars .star{
  margin-top: 22rpx;
    width: 80rpx;
    height: 75rpx;
}

.score{
  font-size: 55rpx;
  color: #ffac2d;
}
/* 基本信息============================================================================== */
.baseDetail{
  width: 700rpx;
  height: 350rpx;
  background-color: rgba(255, 255, 255,.3);
  display: flex;
  flex-direction: row;
  text-align: center;
  border-radius: 15rpx;
  margin-top: 40rpx;
}

.baseDetail .baseDetail1,.baseDetail .baseDetail2{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}
.baseDetail .baseDetail1{
  border-right: 1rpx solid #000;

}
.baseDetail .baseDetail2{
  flex: 3;
  border: 0;
}
/* 这里是baseDetail1里的view各占一份 */
.baseDetail .baseDetail1 view,.baseDetail .baseDetail2 view{
  flex: 1;
  line-height: 85rpx;
}

.desctitle{
  font-size: 55rpx;
}
.desc{
  width: 700rpx;
  /* height: 550rpx; */
  height: 100%;
  padding: 15rpx;
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: rgba(255, 255, 255,.3);
  font-weight: 200;
}


.toFavor{
  width: 500rpx;
  height: 100rpx;
  background-color: #fff;
  background-color: rgba(255, 255, 255,.3);
  margin-top: 40rpx;
  font-size: 45rpx;
  font-weight: 200;
  text-align: center;
  line-height: 100rpx;
  border-radius: 15rpx;
}